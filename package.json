{
  "name": "finances-manager",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "nx serve",
    "build": "nx build",
    "watch": "nx build --watch --configuration development",
    "test": "nx test",
    "build:prod": "nx build --prod",
    "lint": "nx lint --fix && npm run lint:scss",
    "lint:ts": "eslint \"src/**/*.ts\" --fix",
    "lint:scss": "stylelint \"src/**/*.scss\" --fix",
    "resources": "npx cap sync && npx capacitor-assets generate --assetPath 'src/assets/'",
    "deploy:android": "ng build --configuration production && npm run resources && npx cap sync android",
    "build:apk": "npm run deploy:android && cd android && gradlew.bat assembleDebug",
    "release:all": "npm run build:apk && copy android\\app\\build\\outputs\\apk\\debug\\app-debug.apk .\\dpt-investimentos.apk && npm run build:ghpages-win && move .\\dpt-investimentos.apk docs\\dpt-investimentos.apk",
    "deploy": "npm run release:all && npx gh-pages -d docs",
    "build:ghpages-win": "ng build --configuration production --output-path docs --base-href /finances-manager/ && copy src\\404.html docs\\404.html && xcopy docs\\browser\\* docs\\ /E /I /H /K /Y && rmdir /s /q docs\\browser",
    "build:ghpages-linux": "ng build --configuration production --output-path docs --base-href /finances-manager/ && cp src/404.html docs/404.html && cp -r docs/browser/* docs/ && rm -rf docs/browser"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/cdk": "^19.0.4",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/material": "^19.0.4",
    "@angular/material-date-fns-adapter": "^19.0.5",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@capacitor/android": "^7.4.2",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@capacitor/ios": "^7.4.2",
    "@capacitor/splash-screen": "^7.0.1",
    "@ng-matero/extensions": "^19.0.2",
    "@ng-matero/extensions-date-fns-adapter": "^19.0.0",
    "@ngx-formly/core": "^6.3.10",
    "@ngx-formly/material": "^6.3.10",
    "@ngx-translate/core": "^16.0.0",
    "@ngx-translate/http-loader": "^16.0.0",
    "angular-in-memory-web-api": "^0.19.0",
    "apexcharts": "^4.4.0",
    "chart.js": "^4.4.4",
    "chartjs-plugin-datalabels": "^2.2.0",
    "date-fns": "^4.1.0",
    "finances-manager": "file:",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "ng-matero": "^19.0.0",
    "ngx-mask": "^19.0.7",
    "ngx-permissions": "^17.1.0",
    "ngx-progressbar": "^14.0.0",
    "ngx-toastr": "^19.0.0",
    "photoviewer": "^3.10.3",
    "rxjs": "~7.8.0",
    "screenfull": "^6.0.2",
    "tslib": "^2.3.0",
    "xcodebuild": "^1.0.2",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.6",
    "@angular-devkit/core": "^19.0.6",
    "@angular-devkit/schematics": "^19.0.6",
    "@angular/cli": "^19.0.6",
    "@angular/compiler-cli": "^19.0.0",
    "@capacitor/assets": "^3.0.5",
    "@nx/angular": "^20.4.2",
    "@nx/workspace": "20.4.0",
    "@schematics/angular": "^19.0.6",
    "@types/chart.js": "^2.9.41",
    "@types/html2canvas": "^1.0.0",
    "@types/jasmine": "~5.1.0",
    "@types/jspdf": "^1.3.3",
    "angular-eslint": "^19.0.2",
    "eslint": "^9.17.0",
    "gh-pages": "^6.3.0",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "nx": "^20.4.2",
    "parse5": "^7.2.0",
    "prettier": "^3.4.0",
    "stylelint": "^16.12.0",
    "stylelint-config-recess-order": "^5.1.0",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.19.0"
  }
